<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/songs1"
        android:text="Christian song's-1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/songs2"
        android:text="Christian song's-2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>
    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/songs3"
        android:text="Christian song's-3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>
    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/songs4"
        android:text="Christian song's-4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>


</LinearLayout>